<!DOCTYPE html>
<html>
<head>
  <title>Instawho</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:notice] %>
	<%= flash[:notice] %>
	<% elsif flash[:alert] %>
	<%= flash[:alert] %>
	<% end %>
	<header>
		<button id="nav-toggle-button">
			<%= image_tag "nav-menu-toggle" %>
		</button>
		<br clear="all" />
	</header>
	<div class="main-content-area">
		<%= yield %>
	</div>

	<div id="main-nav-container">
		<ul id="main-nav-list">
			<% if @current_user %>
				<li><%= link_to "New Game", root_path(:anchor => '#') %></li>
				<li><%= link_to "My Games", root_path(:anchor => '#') %></li>
				<li><%= link_to "Edit Profile", users_edit_path %></li>
				<li><%= link_to "Log Out", logout_path, method: :delete %></li>
			<% else %>
				<li><%= link_to "Sign In/ Sign Up", root_path %></li>
			<% end %>
		</ul>
	</div>
	<br clear="all" />
</body>
</html>
